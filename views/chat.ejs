<%-include("partials/header",{title:"chat",cssLink:"stylesheets/chat.css"})%>

<body>

    <div class="container top-container">
        <div class="row">
            <div class="col-md-9">
                <div class="container text-center">
                    <h1>Easy Chat!</h1>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-9 col-xs-9 col-sm-9 col-md-9">
                <ul class="nav nav-tabs " id="tabWindow" role="tablist">
                    <li class="nav-item" role="presentation" id="HomeTab">

                        <a class="nav-link active  chat-tab" data-toggle="tab" href="#HomePane" role="tab"
                            aria-controls="home" aria-selected="true">Home</a>

                    </li>


                </ul>
                <div class="tab-content" id="chatWindow">
                    <div class="tab-pane chat-pane show active" id="HomePane" role="tabpanel" aria-labelledby="homeTab">
                    </div>


                </div>
            </div>
            <div class="col-3 col-xs-3 col-sm-3 col-md-3">
                <div class="list-group" id="userWindow" role="tablist">

                </div>
                <!-- <div class="container" id="userWindow"></div> -->
            </div>
        </div>
        <div class="row">
            <div class="input-group">

                <div class="col-xs-9 col-sm-9 col-md-9">
                    <input type="text" class="form-control input-window" aria-label="With textarea"
                        onkeyup="updateInputButtonStatus(event)" id="inputWindow" placeholder="<%=nickname%> says...">
                    </input>
                </div>
                <div class="col-xs-3 col-sm-3 col-md-3">
                    <div class="container" id="buttonContainer">
                        <button type="button" class="btn btn-outline-dark" id="inputButton" onclick="sendMessage()">send
                        </button>

                    </div>

                </div>
            </div>
        </div>
    </div>

</body>

</html>